{
  "env": {
    "browser": true,
    "node": false
  },
  "plugins": ["svelte3"],
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "svelte3/typescript": true // load TypeScript as peer dependency
  }
}
